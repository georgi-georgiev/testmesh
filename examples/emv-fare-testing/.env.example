# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_MATCHES=matches
KAFKA_TOPIC_FARES=fares
KAFKA_TOPIC_CUTOFF=cutoff
KAFKA_TOPIC_COMPENSATION=compensation
KAFKA_TOPIC_NOTIFICATIONS=notifications
KAFKA_TOPIC_BATCH_COMPLETE=batch_complete

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fare_system
DB_USER=postgres
DB_PASS=password
DB_SSL_MODE=disable

# Fare Calculation API
FARE_API_URL=http://localhost:5016
FARE_API_TIMEOUT=30s

# Test Configuration
TEST_ENVIRONMENT=local
TEST_LOG_LEVEL=info

# Fare Rules
DAILY_CAP_AMOUNT=5.00
WEEKLY_CAP_AMOUNT=25.00
MAX_FARE=10.00
SINGLE_FARE_30MIN=2.50
SINGLE_FARE_60MIN=3.50
NIGHT_FARE=1.50

# Green Ticket Program
GREEN_TICKET_DISCOUNT_RATE=0.50

# Timing Configuration (for simulation)
TAP_TIMEOUT_MINUTES=240  # 4 hours
FARE_CALCULATION_TIMEOUT_SECONDS=10
COMPENSATION_PROCESSING_TIMEOUT_SECONDS=15

# Test Data
TEST_CARD_PREFIX=TEST_CARD_
CLEANUP_TEST_DATA=true

# Reporting
REPORT_OUTPUT_DIR=./reports
SAVE_EXECUTION_LOGS=true
